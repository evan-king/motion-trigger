{
  "name": "motion-trigger",
  "version": "1.0.0",
  "description": "Slack integration notifying activity from security cameras",
  "main": "notify.js",
  "scripts": {
    "build": "babel notify.js --out-file bundle.js",
    "deploy-webtask": "wt create -p node8 notify.js --name notify --secret SLACK_TOKEN=${SLACK_TOKEN}",
    "start": "node server.js",
    "logs": "wt logs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/evan/king/motion-trigger"
  },
  "author": "Evan King",
  "license": "MIT",
  "dependencies": {
    "ramda": "^0.24.1",
    "slack": "^9.0.2",
    "superagent": "^3.6.1",
    "superagent-promise": "^1.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "koa": "^1.4.0",
    "mocha": "^3.5.3",
    "raw-body": "^2.3.2",
    "wt-cli": "^6.5.2"
  }
}
